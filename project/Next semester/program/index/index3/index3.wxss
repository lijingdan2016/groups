/* index/index3/index3.wxss */
.info{
    width: 100%;
    height: 100%;
    background-color: rgb(252, 252, 252);
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: rgb(59, 129, 221);
    font-size: 14px;
    font-family: '幼圆';
}
.top{
    width: 75%;
    height: 150px;
    margin-left: 12.5%;
    border-radius: 4px;
    box-shadow: 2px 2px 20px rgba(0, 0, 0, 0.295);
    margin-top: 30px;
}
.top_back{
    width: 100%;
    height: 150px;
    border-radius: 5px;
    position: relative;
}
.top_container{
    position: absolute;
    top: 70px;
    left: 40%;
}
.text{
    color: rgb(47, 189, 255);
    font-size: 16px;
}
.bottom1{
    margin-top: 40px;
    width: 90%;
    margin-left: 5%;
    height: 50px;
    border-radius: 4px;
    box-shadow: 2px 2px 20px rgba(0, 0, 0, 0.295);
    background-color: white;
}
.bottom2{
    margin-top: 30px;
    width: 90%;
    margin-left: 5%;
    height: 100px;
    border-radius: 4px;
    box-shadow: 2px 2px 20px rgba(0, 0, 0, 0.295);
    background-color: white;
}
#btn1{
    border-bottom: 1px solid rgb(226, 226, 226);
}
.btn2{
    width: 100%;
    font-size: 16px;
    color: rgb(165, 165, 165);
    height: 50px;
    line-height: 50px;
    text-align: center;
}