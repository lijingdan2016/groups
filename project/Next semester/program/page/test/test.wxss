/* page/test/test.wxss */
#total{
  width:100%;
  height:100%;
  background-image:url(http://img4.imgtn.bdimg.com/it/u=2668740988,2951971414&fm=26&gp=0.jpg);
}

radio{
    width: 38rpx;
}
 
radio .wx-radio-input{
    border-radius: 50%; 
    width: 28rpx;
    height: 28rpx;
}
 
/* 选中后的样式 （可根据设计稿需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked::before{
    border-radius: 50%;
    width: 44rpx; 
    height: 44rpx; 
    line-height: 44rpx;
    text-align: center;
    font-size: 26rpx; /* 对勾大小 26rpx */
    color:#fff; /* 对勾颜色 */
    background: #2facff;
    border-color: #2facff;
}

.question{
  margin-bottom:20px;
  width: 80%;
  padding: 10rpx 10%;
  
}
#submit{
  width:200rpx;
  height:40rpx;
  border-radius: 10%;
  position:absolute;
  right:20rpx;
  bottom: 10rpx;
  padding: 0 10%;
}
#submit button{
  background-color: rgb(18, 176, 238);
}